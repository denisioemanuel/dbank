<%= form_with(model: agency) do |form| %>
  <% if agency.errors.any? %>
    <div id="error_explanation" class="alert alert-info" role="alert">
      <h5 class="alert-heading"><%= pluralize(agency.errors.count, "error") %> ao cadastrar agência:</h5>

      <ul>
      <% agency.errors.full_messages.each do |message| %>
        <li class="list-group-item list-group-item-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.number_field :number, class:"form-control", data:{ "aria-describedby": "numberHelp"}%>
    <small id="numberHelp" class="form-text text-muted">Digite somente números</small>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control" , placeholder: "EX: Rua Nome da Rua , 150 - Bairro" %>
  </div>
<div class="btn-toolbar">
  <div class="btn-group mr-4">
    <%= form.submit "Salvar", class:"btn btn-primary", data:{role:"group"}%>
    <br/>
  </div>
<% end %>
