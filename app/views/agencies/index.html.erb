
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Agência</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <%#= link_to 'Adicionar', new_agency_path , class:'btn btn-sm btn-outline-secondary', data: { toggle:'modal',  'title-modal': 'Adicionar', target:'#modal' } %>
        <%= link_to 'Adicionar', new_agency_path , class:'btn btn-sm btn-outline-secondary' %>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Número da Agência</th>
        <th>Endereço</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @agencies.each do |agency| %>
        <tr>
          <td><%= agency.number %></td>
          <td><%= agency.address %></td>
          <td>
            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
              <div class="btn-group mr-2" role="group" aria-label="First group">
                <%= link_to edit_agency_path(agency), class:"btn btn-primary btn-sm" do%>
                <span class="fe fe-edit">
                <%end%>
              </div>
              <div class="btn-group mr-2" role="group" aria-label="Second group">
                <%#= link_to agency_path(agency), method: :delete, class:"btn btn-danger btn-sm", data: { confirm: 'Você tem certeza?' } do %>
                <%= link_to agency_path(agency), class:'btn btn-sm btn-danger', data: { toggle:'modal', mensage: 'Você tem certeza que deseja excluir?', target:'#modalConfirm' } do %>
                  <span class="fe fe-trash">
                <%end%>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
    <%= render "layouts/shared/modalConfirmation"%>

<br/>
