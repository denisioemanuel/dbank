<%= form_with(model: @account, local: true) do |form| %>
  <% if @account.errors.any? %>
    <div id="error_explanation" class="alert alert-info" role="alert">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li class="list-group-item list-group-item-danger">
          <%= message %>
        </li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :number %>
    <%= form.number_field :number, class:"form-control", data:{ "aria-describedby": "numberHelp"} %>
    <small id="numberHelp" class="form-text text-muted">Digite somente n√∫meros</small>
  </div>

  <div class="form-group">
    <%= form.label :limit %>
    <%= form.text_field :limit, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Agency_id %>
    <%= form.collection_select :Agency_id, Agency.all, :id, :number, { include_blank: true }, { class: "form-control" } %>
  </div>

<div class="btn-toolbar">
  <div class="btn-group mr-4">
    <%= form.submit "Salvar", class:"btn btn-primary", data:{role:"group"} %>
  </div>
  <div class="btn-group mr-2" >
    <%= link_to 'Voltar', accounts_path, class:"btn btn-secondary" %>
  </div>
</div>
<% end %>
